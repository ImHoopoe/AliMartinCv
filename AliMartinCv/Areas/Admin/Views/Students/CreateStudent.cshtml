@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "Create New Student";
}

<div class="container-fluid">
    <h1 class="h3 mb-2 text-gray-800">@ViewData["Title"]</h1>
    <div class="card shadow mb-4">
        <div class="card-header py-3">
            <h6 class="m-0 font-weight-bold text-primary">Create New Student</h6>
        </div>
        <div class="card-body">
            <form method="post">
                <div class="form-group">
                    <label for="Name">First Name</label>
                    <input type="text" class="form-control" id="Name" name="Name" required />
                </div>

                <div class="form-group">
                    <label for="LastName">Last Name</label>
                    <input type="text" class="form-control" id="LastName" name="LastName" required />
                </div>

                <input type="hidden" name="ClassId" value="@ViewData["ClassId"]" />

                <button type="submit" class="btn btn-success btn-block">Create Student</button>
            </form>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>