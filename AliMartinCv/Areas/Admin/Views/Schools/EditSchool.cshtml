@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AliMartinCv.DataLayer.DTos.EditSchoolViewModel
@{
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = $"Edit School-{Model.SchoolName}";
}
<form method="post">
    <div class="card shadow mb-4">
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Edit School</h1>
            </div>

            <div class="form-group">
                <input asp-for="SchoolName" type="text" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter School Name...">
            </div>

            <input asp-for="SchoolId" type="hidden" /> <!-- Hidden input for SchoolId -->

            <button type="submit" class="btn btn-warning btn-user btn-block">Edit !</button>
            <hr>
        </div>
    </div>
</form>