@model AliMartinCv.DataLayer.Entities.BlogGroup
@{
    ViewData["Title"] = "Edit Existed Sub Group";
    Layout = "/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<form method="post">
    <div class="card shadow mb-4">
        <input asp-for="BlogGroupId" value="@ViewBag.Id" hidden="hidden" />
        <input asp-for="BlogGroupParentId" value="@ViewBag.subId" hidden="hidden" />
        <div class="p-5">
            <div class="text-center">
                <h1 class="h4 text-gray-900 mb-4">Edit Blog Sub Groupe</h1>
            </div>

            <div class="form-group">
                <input asp-for="BlogGroupTitle" type="text" class="form-control form-control-user" id="exampleInputEmail" aria-describedby="emailHelp" placeholder="Enter Group Name...">
            </div>
            <button type="submit" class="btn btn-warning btn-user btn-block">Edit !</button>
            <hr>

        </div>
    </div>
</form>