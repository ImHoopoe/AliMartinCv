<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>پنل مدیریت مدرسه</title>

    <!-- Meta Tags for SEO -->
    <meta name="description" content="پنل مدیریت مدرسه برای نظارت بر وضعیت دانش‌آموزان، نمرات و غیبت‌ها.">
    <meta name="keywords" content="پنل مدیریت مدرسه, وضعیت دانش‌آموز, غیبت‌ها, نمرات, پیام معلم">
    <meta name="author" content="Your Name">

    <!-- بارگذاری CSS فایل شخصی -->
    <link rel="stylesheet" href="/css/Student/Student.css" />

    <!-- بارگذاری jQuery (آخرین نسخه پایدار) -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>

    <!-- بارگذاری Persian Datepicker -->
    <link href="https://unpkg.com/persian-datepicker@1.2.0/dist/css/persian-datepicker.min.css" rel="stylesheet">
    <script src="https://unpkg.com/persian-datepicker@1.2.0/dist/js/persian-datepicker.min.js"></script>

    <!-- سایر منابع و کتابخانه‌های مورد نیاز -->
    <partial name="Refrences" />
</head>

<body class="sidebar-collapsed">

    <!-- Sidebar -->
    <nav id="sidebar">
        <div class="sidebar-header">
            <h4 class="animate-on-load animate__animated animate__fadeIn">پنل مدیریت</h4>
        </div>

        <ul class="list-unstyled components">
            <li>
                <a href="#" class="animate-on-load animate__animated animate__fadeIn animate__delay-1s">
                    <i class="fas fa-user-graduate"></i>
                    <span class="nav-link-text">وضعیت دانش آموز</span>
                </a>
            </li>
            <li>
                <a href="#" class="animate-on-load animate__animated animate__fadeIn animate__delay-2s">
                    <i class="fas fa-calendar-times"></i>
                    <span class="nav-link-text">غیبت ها</span>
                </a>
            </li>
            <li>
                <a href="#" class="animate-on-load animate__animated animate__fadeIn animate__delay-3s">
                    <i class="fas fa-chart-bar"></i>
                    <span class="nav-link-text">نمرات</span>
                </a>
            </li>
            <li>
                <a href="#" class="animate-on-load animate__animated animate__fadeIn animate__delay-4s">
                    <i class="fas fa-file-alt"></i>
                    <span class="nav-link-text">فرم خصوصیات فردی</span>
                </a>
            </li>
            <!-- Added Section: Teacher Messages -->
            <li>
                <a href="#" class="animate-on-load animate__animated animate__fadeIn animate__delay-5s">
                    <i class="fas fa-envelope"></i>
                    <span class="nav-link-text">پیام های معلم</span>
                </a>
            </li>
        </ul>
    </nav>

    <!-- Page Content -->
    <div id="content">
        <div class="container-fluid">
            <!-- Page Header -->
            <div class="row">
                <div class="col-12">
                    <div class="page-header animate-on-load animate__animated animate__fadeInDown">
                        <h2>داشبورد مدیریت</h2>
                        <p class="mb-0">به پنل مدیریت مدرسه خوش آمدید</p>
                    </div>
                </div>
            </div>
            @RenderBody()
        </div>
    </div>

    <!-- Sidebar Toggle Button -->
    <button type="button" id="sidebarCollapse" class="d-lg-none">
        <i class="fas fa-bars"></i>
    </button>

    <!-- Bootstrap & jQuery -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery (آخرین نسخه موجود) -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

    @RenderSection("Scripts", false)
    <script>
        $(document).ready(function () {
            // Sidebar Toggle
            $('#sidebarCollapse').on('click', function () {
                $('body').toggleClass('sidebar-collapsed');
            });

            // Auto-collapse on mobile if not already collapsed
            function checkWidth() {
                if ($(window).width() <= 768) {
                    $('body').addClass('sidebar-collapsed');
                } else {
                    $('body').removeClass('sidebar-collapsed');
                }
            }

            checkWidth();
            $(window).resize(checkWidth);
        });
    </script>
</body>
</html>
