@using Microsoft.AspNetCore.Mvc.TagHelpers
@model AliMartinCv.Core.DTOS.BlogViewModels.BlogListViewModel

<section id="blogs" class="blogs-section section py-5" data-observe aria-labelledby="blogs-title">
    <div class="container">
        <h2 id="blogs-title" class="text-center section-title mb-4">All Blog Posts</h2>

        <!-- فرم جست‌وجو -->
        <div class="row justify-content-center mb-5">
            <div class="col-12 col-md-8 col-lg-6">
                <form asp-action="Index" method="get" class="d-flex flex-column flex-sm-row gap-3">
                    <input type="text"
                           name="searchQuery"
                           value="@Model.SearchQuery"
                           class="form-control"
                           placeholder="Search blogs by title or description..."
                           aria-label="Search blogs">
                    <button type="submit"
                            class="btn btn-primary d-flex align-items-center">
                        <i class="fas fa-search me-2" aria-hidden="true"></i> Search
                    </button>
                </form>
            </div>
        </div>

        <!-- لیست بلاگ‌ها -->
        @if (Model.Blogs.Any())
        {
            <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-4">
                @foreach (var blog in Model.Blogs)
                {
                    <div class="col">
                        <article class="glass-card p-3 blog-item h-100 d-flex flex-column">
                            <img src="/Blog/Thumbs/@blog.BlogThumbnail"
                                 class="img-fluid rounded mb-3 w-100"
                                 alt="@blog.BlogTitle thumbnail"
                                 loading="lazy">

                            <h5 class="card-title text-truncate">@blog.BlogTitle</h5>
                            <p class="card-text text-truncate">@blog.BlogShortDescription</p>

                            <div class="blog-meta d-flex justify-content-between align-items-center mb-3 text-muted small">
                                <span>
                                    <i class="far fa-calendar-alt me-1" aria-hidden="true"></i>
                                    @blog.BlogPublishDate.ToString("MMM dd, yyyy")
                                </span>
                                <span>
                                    <i class="far fa-eye me-1" aria-hidden="true"></i>
                                    @blog.Visit Views
                                </span>
                            </div>

                            <a href="/blogs/Blog/@blog.BlogTitle.Replace(" ", "-")"
                               class="btn btn-sm btn-outline-primary mt-auto"
                               aria-label="Read more about @blog.BlogTitle">
                                Read More
                            </a>
                        </article>
                    </div>
                }
            </div>

            <!-- صفحه‌بندی -->
            <nav aria-label="Blog pagination" class="mt-5">
                <ul class="pagination justify-content-center">
                    <!-- دکمه Previous -->
                    <li class="page-item @(Model.CurrentPage == 1 ? "disabled" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { searchQuery = Model.SearchQuery, page = Model.CurrentPage - 1 })"
                           aria-label="Previous page">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>

                    <!-- شماره صفحات -->
                    @for (int i = 1; i <= Model.TotalPages; i++)
                    {
                        <li class="page-item @(Model.CurrentPage == i ? "active" : "")">
                            <a class="page-link"
                               href="@Url.Action("Index", new { searchQuery = Model.SearchQuery, page = i })">
                                @i
                            </a>
                        </li>
                    }

                    <!-- دکمه Next -->
                    <li class="page-item @(Model.CurrentPage == Model.TotalPages ? "disabled" : "")">
                        <a class="page-link"
                           href="@Url.Action("Index", new { searchQuery = Model.SearchQuery, page = Model.CurrentPage + 1 })"
                           aria-label="Next page">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        }
        else
        {
            <div class="text-center text-muted py-5">
                <p>No blogs found matching your search criteria.</p>
            </div>
        }
    </div>
</section>