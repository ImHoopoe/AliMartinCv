<script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


<script>
    $(document).ready(function() {
        // پنهان کردن فیلدهای وابسته در ابتدا
        $('#parentWithWhomLiving').hide();
        $('#fatherDeceasedDate').hide();
        $('#motherDeceasedDate').hide();

        // نمایش یا مخفی کردن فیلد "والد زندگی‌کننده" بر اساس وضعیت طلاق
        $('input[name="IsDivorced"]').change(function() {
            if ($(this).is(':checked')) {
                $('#parentWithWhomLiving').show();
            } else {
                $('#parentWithWhomLiving').hide();
            }
        });

        // نمایش یا مخفی کردن تاریخ فوت پدر
        $('input[name="IsFatherDeceased"]').change(function() {
            if ($(this).is(':checked')) {
                $('#fatherDeceasedDate').show();
            } else {
                $('#fatherDeceasedDate').hide();
            }
        });

        // نمایش یا مخفی کردن تاریخ فوت مادر
        $('input[name="IsMotherDeceased"]').change(function() {
            if ($(this).is(':checked')) {
                $('#motherDeceasedDate').show();
            } else {
                $('#motherDeceasedDate').hide();
            }
        });
    });

</script>